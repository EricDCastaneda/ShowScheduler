@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<ul class="navbar-nav flex-grow-1">
    <li>
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li>
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
    </li>
</ul>
        }
        else
        {
        <ul class="navbar-nav flex-grow-1">
            <li>
                <a id="register" class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li>
                <a id="login" class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        </ul>
        }

